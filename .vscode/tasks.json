{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "npm: frontend-serve",
        "type": "npm",
        "script": "serve",
        "path": "frontend/",
        "isBackground": true,
        "problemMatcher": {
          "owner": "custom",
          "pattern": {
            "regexp": "^(.*)$",
            "file": 1,
            "location": 2,
            "message": 3
          },
          "background": {
            "activeOnStart": true,
            "beginsPattern": "Starting development server...",
            "endsPattern": "Compiled successfully."
          }
        },
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }
  